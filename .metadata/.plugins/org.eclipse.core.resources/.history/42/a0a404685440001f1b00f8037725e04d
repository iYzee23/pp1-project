program InheritanceExample 

const int MAX_VALUE = 100;
const int MAX_INT = 5;
const char MAX_CHAR = 'A';
const bool MAX_BOOL = true;

class BaseClass 
{
	static int statField;

    int baseField;

	{
		void displayRead()
	    {
	        read(baseField);
	        read(statField);
	        read(this.baseField);
	        read(BaseClass.statField);  
	    }
	
	    void displayPrint() 
	    {
	        print(baseField, 1);
	        print(statField, 1);
	        print(this.baseField, 1);
	        print(BaseClass.statField, 1);
	        
	        print(baseField);
	        print(statField);
	        print(this.baseField);
	        print(BaseClass.statField);
	    }
	    
	    void bcMethod()
	    {
	    
	    }
	}
}

class DerivedClass extends BaseClass
{
	static int statField;
	
    int derivedField;

	{
		void displayPrint() 
	    {
	    	print(baseField, 1);
	    	print(derivedField, 1);
	        print(statField, 1);
	        print(this.baseField, 1);
	    	print(this.derivedField, 1);
	    	print(BaseClass.statField, 1);
	        print(DerivedClass.statField, 1);
	        
			print(baseField);
	    	print(derivedField);
	        print(statField);
	        print(this.baseField);
	    	print(this.derivedField);
	    	print(BaseClass.statField);
	        print(DerivedClass.statField);
	    }
	    
	    void displayRead()
	    {
	        read(baseField);
	    	read(derivedField);
	        read(statField);
	        read(this.baseField);
	    	read(this.derivedField);
	    	read(BaseClass.statField);
	        read(DerivedClass.statField);
	    }
	}
}

{
    void main()
    DerivedClass obj;
    {
        obj = new DerivedClass();
        
        // Postavljanje vrednosti polja
        obj.baseField = 10;
        obj.derivedField = 20;
        
        // Poziv redefinisanog metoda display
        obj.display();  // Očekivani ispis: "DerivedClass display method"
        
        // Poziv metoda iz DerivedClass koji prikazuje oba polja
        obj.showBothFields();  // Očekivani ispis: "Base field: 10" i "Derived field: 20"
    }
}
