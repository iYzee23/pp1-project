program Example {
    namespace MyNamespace {
        const int MAX_VALUE = 100;

        class MyClass extends BaseClass {
            static {
                // Static initializer
                // za C nivo
            }

            int myField;

            void myMethod(int param) {
                int i;
                for (i = 0; i < param; i++) {
                    if (i % 2 == 0) {
                        print("Even number: ", i);
                    } else {
                        print("Odd number: ", i);
                    }
                }
            }
        }

        void main() {
            MyClass obj = new MyClass();
            obj.myMethod(10);
        }
    }
}
